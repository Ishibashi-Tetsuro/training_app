<%= form_for(@schedule, url: schedules_path, method: :post) do |f| %>
  <label class="control-label" for=""><p>エクササイズ</p></label>
  <%= f.text_field :exercise, class: 'form-control' %>

  <label class="control-label" for=""><p>実施予定日</p></label>
  <%= raw sprintf(
    f.date_select(
        :training_date,
        {
          :discard_year => true,
          default: Date.today + 7.day,
          date_separator: '%s',
          datetime_separator: '%s',
        },
        {class: 'form-control' }
        ),
        '月') + '日'
    %>

    <%= raw sprintf(
    f.date_select(
        :training_date,
        {
          :discard_year => true,
          default: Date.today + 8.day,
          date_separator: '%s',
          datetime_separator: '%s',
        },
        {class: 'form-control' }
        ),
        '月') + '日'
    %>

  <%= f.submit '登録', class: 'btn btn-primary' %>
<% end %>
