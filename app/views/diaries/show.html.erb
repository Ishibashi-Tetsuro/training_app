<h1>日記詳細</h1>
<div>
  <%= @diary.content %>
  <%= @diary.created_at %>
  <div class="">
    <% if @diary.image? %>
      <%= image_tag @diary.image_url(:thumb400) %>
    <% end %>
  </div>
  <h3>いいね件数: <%= @diary.likes.count %></h3>
  <% if current_user.already_liked?(@diary) %>
    <%= button_to 'いいねを取り消す', diary_like_path(@diary), method: :delete %>
  <% else %>
    <%= button_to 'いいね', diary_likes_path(@diary) %>
  <% end %>
</div>
<h2>いいねしたユーザー</h2>
<% @diary.liked_users.each do |user| %>
  <li><%= user.email %></li>
<% end %>
<% if user_signed_in? && current_user.id == @diary.user_id %>
  <%= link_to "日記を編集する", edit_diary_path %>
  <%= link_to "日記を削除する", diary_path(@diary), method: :delete %>
<% end %>
<div class="">
  <%= link_to "戻る", :back %>
</div>
